<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.buyo.adminfx.ui.controllers.CategoryController">
    <top>
        <ToolBar>
            <Label text="Categorias" />
            <Separator />
            <Button text="Adicionar" onAction="#onAdd" />
            <Button text="Editar" onAction="#onEdit" />
            <Button text="Remover" onAction="#onDelete" />
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80" />
                <TableColumn fx:id="colName" text="Nome" prefWidth="220" />
                <TableColumn fx:id="colDescription" text="Descrição" prefWidth="360" />
            </columns>
        </TableView>
    </center>
</BorderPane>
