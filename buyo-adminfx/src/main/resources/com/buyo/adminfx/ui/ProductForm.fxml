<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.buyo.adminfx.ui.controllers.ProductFormController">
    <center>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="16" left="16" right="16" bottom="16"/></padding>
            <Label text="Produto" style="-fx-font-size: 16; -fx-font-weight: bold;" GridPane.columnSpan="2" />

            <Label text="Nome:" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Nome do produto" prefWidth="320" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="PreÃ§o:" GridPane.rowIndex="2" />
            <TextField fx:id="priceField" promptText="0,00" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Categoria:" GridPane.rowIndex="3" />
            <ComboBox fx:id="categoryCombo" prefWidth="240" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Estoque:" GridPane.rowIndex="4" />
            <TextField fx:id="stockField" promptText="0" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Imagem (URL):" GridPane.rowIndex="5" />
            <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <TextField fx:id="imageUrlField" promptText="http(s):// ou file:///" HBox.hgrow="ALWAYS" />
                <Button text="Escolher arquivo" onAction="#onPickImage" />
            </HBox>

            <CheckBox fx:id="activeCheck" text="Ativo" selected="true" GridPane.rowIndex="6" GridPane.columnIndex="1" />

            <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnIndex="1">
                <Button text="Salvar" onAction="#onSave" />
                <Button text="Cancelar" onAction="#onCancel" />
                <Label fx:id="statusLabel" />
            </HBox>
        </GridPane>
    </center>
</BorderPane>
