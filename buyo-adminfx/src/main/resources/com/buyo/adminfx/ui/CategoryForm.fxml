<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.buyo.adminfx.ui.controllers.CategoryFormController">
    <center>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="16" left="16" right="16" bottom="16"/></padding>
            <Label text="Categoria" style="-fx-font-size: 16; -fx-font-weight: bold;" GridPane.columnSpan="2" />

            <Label text="Nome:" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Nome da categoria" prefWidth="320" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Descrição:" GridPane.rowIndex="2" />
            <TextArea fx:id="descriptionField" promptText="Descrição" prefRowCount="3" prefWidth="320" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button text="Salvar" onAction="#onSave" />
                <Button text="Cancelar" onAction="#onCancel" />
                <Label fx:id="statusLabel" />
            </HBox>
        </GridPane>
    </center>
</BorderPane>
