<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.buyo.adminfx.ui.controllers.ProfileController">
    <center>
        <GridPane hgap="12" vgap="12">
            <padding><Insets top="24" left="24" right="24" bottom="24"/></padding>

            <HBox spacing="10" GridPane.columnSpan="2">
                <Button text="Voltar" onAction="#onBack" />
                <Label text="Minha conta" style="-fx-font-size: 18; -fx-font-weight: bold;" />
            </HBox>

            <Label text="Foto:" GridPane.rowIndex="1" />
            <HBox spacing="12" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <ImageView fx:id="photoView" fitWidth="96" fitHeight="96" preserveRatio="true" />
                <VBox spacing="6">
                    <Button text="Carregar foto" onAction="#onPickPhoto" />
                    <Label fx:id="photoPathLabel" textFill="#666" wrapText="true" />
                </VBox>
            </HBox>

            <Label text="Nome:" GridPane.rowIndex="2" />
            <TextField fx:id="nameField" promptText="Seu nome" prefWidth="320" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Email:" GridPane.rowIndex="3" />
            <TextField fx:id="emailField" promptText="Seu email" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Telefone:" GridPane.rowIndex="4" />
            <TextField fx:id="phoneField" promptText="(xx) xxxxx-xxxx" prefWidth="220" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Button text="Salvar" onAction="#onSave" />
                <Label fx:id="statusLabel" />
            </HBox>
        </GridPane>
    </center>
</BorderPane>

